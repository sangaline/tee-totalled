# Dockerfile for TeeTotalledBot development with hot reloading.

FROM python:3.12-slim AS base

# Install system dependencies.
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast package management.
RUN pip install --no-cache-dir uv

WORKDIR /app

# Copy dependency files first for better layer caching.
COPY pyproject.toml ./
COPY README.md ./
COPY src/ ./src/

# Install the package with dev extras (includes watchfiles for hot reload).
RUN uv pip install --system --no-cache ".[dev]"

# Set environment variables.
ENV PYTHONUNBUFFERED=1
ENV TEE_ENV=development

# Run with watchfiles for hot reloading.
# Watches the src directory and restarts on any .py file change.
CMD ["watchfiles", "--filter", "python", "python -m tee_totalled", "./src"]
